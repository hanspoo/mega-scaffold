{
  "compileOnSave": false,
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/components": ["libs/desde-algolia/src/lib"],
      "@mega-scaffold/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@mega-scaffold/components": ["libs/components/src/index.ts"],
      "@mega-scaffold/dao-prisma": ["libs/dao-prisma/src/index.ts"],
      "@mega-scaffold/desde-algolia": ["libs/desde-algolia/src/index.ts"],
      "@mega-scaffold/local-daisy": ["libs/local-daisy/src/index.ts"],
      "@mega-scaffold/mail-utils": ["libs/mail-utils/src/index.ts"],
      "@mega-scaffold/redux-store": ["libs/redux-store/src/index.ts"],
      "@mega-scaffold/services": ["libs/services/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
