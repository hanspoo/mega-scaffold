generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DAODenuncia {
  id         String    @id @default(uuid())
  email      String
  name       String
  createdAt  DateTime  @default(now()) @db.Timestamptz(6)
  modifiedAt DateTime  @default(now()) @db.Timestamptz(6)
  estado     String
  coments    String?
  phone      String
  items      DAOItem[]

  @@map("denuncia")
}

model DAOItem {
  id         String      @id @default(uuid())
  idItem     String
  name       String
  quantity   Int
  value      Float
  denunciaId String
  createdAt  DateTime    @default(now()) @db.Timestamptz(6)
  modifiedAt DateTime    @default(now()) @db.Timestamptz(6)
  denuncia   DAODenuncia @relation(fields: [denunciaId], references: [id])

  @@map("item")
}
