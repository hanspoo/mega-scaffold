generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DAOArticle {
  id         String    @id @default(uuid())
  email      String
  name       String
  createdAt  DateTime  @default(now()) @db.Timestamptz(6)
  modifiedAt DateTime  @default(now()) @db.Timestamptz(6)
  estado     String
  coments    String?
  phone      String
  items      DAOItem[]

  @@map("article")
}

model DAOItem {
  id         String      @id @default(uuid())
  idItem     String
  name       String
  quantity   Int
  value      Float
  articleId String
  createdAt  DateTime    @default(now()) @db.Timestamptz(6)
  modifiedAt DateTime    @default(now()) @db.Timestamptz(6)
  article   DAOArticle @relation(fields: [articleId], references: [id])

  @@map("item")
}
